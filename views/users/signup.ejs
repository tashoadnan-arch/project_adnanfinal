<% layout("/layouts/boilerplate")%>

<div class="row mt-3" >
     <h1 class="col-6 offset-3">signup for wanderlust</h1>
        <div class="col-6 offset-3">
            <form action="/signup" method="post">
            <div class="mb-3">
                    <label for="username" class="form-label">title</label>
                     <input name="username"
                      id="username"
                       type="text"
                        class="form-control"
                        required>
       
            <div class="valid-feedback">this looks good</div>
            </div>

             <div class="mb-3">
                    <label for="email" class="form-label">email</label>
                     <input name="email"
                      id="email"
                       type="text"
                        class="form-control"
                        required>
       
           
            </div>

               <div class="mb-3">
                    <label for="password" class="form-label">password</label>
                     <input name="password"
                      id="password"
                       type="text"
                        class="form-control"
                        required>
       
           
            </div>
            <button class="btn btn-success ">signup</button>
            </form>
        </div>

</div>